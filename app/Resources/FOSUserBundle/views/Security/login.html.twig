{% extends "foslayout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Log in{% endblock %}

{% block navbar %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('index') }}">Backoffice</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('dashboard') }}">Dashboard</a></li>
                    <li><a href="{{ path('avisos') }}">Avisos</a></li>
                    <li><a href="{{ path('bloques') }}">Bloques</a></li>
                    <li><a href="{{ path('comunicaciones') }}">Comunicaciones</a></li>
                    <li><a href="{{ path('configuracion') }}">Configuración</a></li>
                    <li class="active"><a href="{{ path('fos_user_security_login') }}">Log in</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>
{% endblock %}

{% block fos_user_content %}
    {% if error %}
        <div class="container">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container">
        <p>Para entrar el usuario es adria y la contraseña adria.</p>


        <form class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="form-group">
                <label for="username" class="col-lg-2 control-label">{{ 'security.login.username'|trans }}</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="col-lg-2 control-label">{{ 'security.login.password'|trans }}</label>
                <div class="col-lg-10">
                    <input type="password" class="form-control" id="password" name="_password" required="required" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <input class="btn btn-lg btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </div>
            </div>
        </form>
    </div>
{% endblock fos_user_content %}