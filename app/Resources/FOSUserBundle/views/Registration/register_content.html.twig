{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <h3>Registro de un nuevo usuario</h3>
    <form class="form-horizontal" role="form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
        {{ form_errors(form) }}
        <div class="form-group">
            <div class="col-lg-10">
                {{ form_label(form.email) }}
                {{ form_widget(form.email,{
                    'attr': {'class': 'form-control'},
                    'label': 'Email'
                }) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10">
                {{ form_label(form.username) }}
                {{ form_widget(form.username,{
                'attr': {'class': 'form-control'},
                'label': 'User'
                }) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10">
                {{ form_label(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first,{
                'attr': {'class': 'form-control'},
                'label': 'Password'
                }) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10">
                {{ form_label(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second,{
                'attr': {'class': 'form-control'},
                'label': 'Repeat Password'
                }) }}
            </div>
        </div>

        {# form_widget(form) #}
        <div>
            <input class="btn btn-lg btn-primary" type="submit" value="{{ 'registration.submit'|trans }}" />
        </div>
    </form>
</div>